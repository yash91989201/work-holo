{
  "name": "work-holo",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {}
  },
  "scripts": {
    "check": "oxlint",
    "prepare": "husky",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "auth:generate": "bunx @better-auth/cli@latest generate --config packages/auth/src/index.ts --output packages/db/src/schema/auth.ts",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @work-holo/db db:push",
    "db:studio": "turbo -F @work-holo/db db:studio",
    "db:generate": "turbo -F @work-holo/db db:generate",
    "db:migrate": "turbo -F @work-holo/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "^1.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.31.0",
    "turbo": "^2.6.2",
    "ultracite": "6.3.9"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.3"
}
